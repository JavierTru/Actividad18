@page "/Servicios/Nuevo_Servicio"
@inject HttpClient http
@inject NavigationManager navegator
@using Actividad17.Shared.Models

<h3>Nuevo Servicio</h3>
<EditForm Model="cli" OnValidSubmit="Agregar">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="numIdServicio" class="form-label">Id del Cliente</label>
        <InputNumber id="numIdServicio" class="form-control" @bind-Value="cli.ClientesId" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</EditForm>


@code {
    private Servicios cli = new Servicios();
    private async void Agregar()
    {
        cli.Fecha = DateTime.Now;
        await http.PostAsJsonAsync("api/Servicios", cli);
        navegator.NavigateTo("/servicios");
    }
}

